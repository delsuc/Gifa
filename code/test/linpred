simu 6024 512 2 1.0 3123 1.0 0. \
1.0 5001 1.0 0. 0.0
dt->svd 512
svd->ar 1
ar->dt 1k 1
itype 0 evaln 1 1k itype 1
set a = (abs($noise - .95968282)<0.001)
set b = (abs($shift - .226734569878E-03)<0.001)
