refmacro 1
set n = 1
set sz = 100
set sp1 = 0  set sp2 = 0  set sdp1 = 0  set sdp2 = 0  set schi = 0
for i = 1 to $n
  dim 1 chsize $sz
  one tm $sz $sz  put tab                ; create a dump TAB[]
  one mult 1.5 specw 1000 em 500       ; create a dump data-set
  put data
  one mult 1.5 specw 1000 em 50       ; create a dump data-set
  adddata
  iter 20   miniter 10
  addnoise .02 123

  noise ($noise*10)
  set p1 := 1
  set p2 := 0.1

  FITGENE '$p1*exp(-$x/$p2)' 2
  set sp1 = (%+$p1)
  set sdp1 = (%+$dp1)
  set sp2 = (%+$p2)
  set sdp2 = (%+$dp2)
  set schi = (%+$chi2)
endfor
set p1 = ($sp1/$n)
set p2 = ($sp2/$n)
set dp1 = ($sdp1/$n)
set dp2 = ($sdp2/$n)
print ("<Chi2> = "; ($schi/$n))
tt
showexp '$p1*exp(-$x/$p2)'
